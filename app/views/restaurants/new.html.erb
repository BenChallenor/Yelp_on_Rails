<h1>Add a restaurant</h1>

<%= form_with scope: :restaurant, url: restaurants_path, local: true do |form| %>

<% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2>
        Oopps! There are <%= pluralize(@restaurant.errors.count, "error") %>! Please address the following:
      </h2>
      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p>
  <%= form.label :name %><br>
  <%= form.text_field :name %><br>
</p>

<p>
  <%= form.label :description %><br>
  <%= form.text_field :description %><br>
</p>

<p>
<%=form.submit%>
</p>
<%end%>

<%= link_to "Back to restaurant listings", restaurants_path%>
